<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/fitxa_personal"
        android:textFontWeight="700"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="end"
            android:text="@string/nom"></TextView>

        <EditText
            android:id="@+id/edtNom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="75"
            android:hint="@string/hint_nom">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="end"
            android:text="@string/cognoms"></TextView>

        <EditText
            android:id="@+id/edtCognom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="75"
            android:hint="@string/hint_cognoms"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="end"
            android:text="@string/tel_fon"></TextView>

        <EditText
            android:id="@+id/edtTelefon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="75"
            android:hint="@string/introduir_tel_fon"
            android:inputType="phone"></EditText>
    </LinearLayout>

    <!-- R.id.rdgSexe -->
    <RadioGroup
        android:id="@+id/rdgSexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbSexeH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="@string/home"></RadioButton>

        <RadioButton
            android:id="@+id/rdbSexeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dona"></RadioButton>

    </RadioGroup>

    <Spinner
        android:id="@+id/spnProvincia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLeft"
            android:text="<"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"></Button>

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            ></Button>
        <Button
            android:id="@+id/btnOk"
            android:text="OK"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"></Button>
        <Button
            android:id="@+id/btnRight"
            android:text=">"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"></Button>
    </LinearLayout>


</LinearLayout>