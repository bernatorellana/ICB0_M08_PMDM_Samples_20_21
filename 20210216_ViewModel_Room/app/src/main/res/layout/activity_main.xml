<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:layout_row="2"
    tools:context=".MainActivity">

<EditText android:id="@+id/edtPlayerA"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textSize="60dp"
    android:layout_gravity="center"
    android:layout_column="0"
    android:layout_row="0"
    android:text="0"></EditText>
    <EditText android:id="@+id/edtPlayerB"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="0"
        android:textSize="60dp"
        android:text="0"></EditText>
   <Button android:id="@+id/btnPlayerA"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textSize="20dp"
       android:layout_gravity="center"
       android:layout_column="0"
       android:layout_row="1"
       android:text="A scores"></Button>
    <Button android:id="@+id/btnPlayerB"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="1"
        android:text="B scores"></Button>
</GridLayout>